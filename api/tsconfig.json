{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2020",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "ts-node": {
    // Ini memberi tahu ts-node untuk HANYA mengompilasi,
    // dan tidak mencoba menjalankan sebagai ESM
    "transpileOnly": true
  }
}