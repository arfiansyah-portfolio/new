{
    "compilerOptions": {
        // --- Target & Module ---
        "target": "ES2020",
        "lib": [
            "ES2021"
        ], // ðŸ‘ˆ PENTING: Perbaikan untuk 'Promise.any'
        "module": "CommonJS",
        "moduleResolution": "Node",
        // --- Path & Output ---
        "outDir": "dist",
        "rootDir": "src", // ðŸ‘ˆ TAMBAHAN: Best practice
        // --- Interoperabilitas ---
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        // --- Aturan Ketat (Bagus!) ---
        "strict": true,
        // --- Tipe ---
        "types": [
            "node"
        ]
    },
    "include": [
        "src", // ðŸ‘ˆ Disederhanakan
        "@types", // ðŸ‘ˆ Asumsi ini ada di root proyek
        "global.d.ts" // ðŸ‘ˆ Tambahan untuk file global
    ]
}